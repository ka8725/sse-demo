<ul id="users">
</ul>

<%= content_for :javascript do %>
  <script type="text/javascript">
    var source = new EventSource('https://realtime-db-38985.firebaseio.com/todos.json');

    source.addEventListener('post', function(e){
      console.log('Received a message:', e);
      document.getElementById('users').append(e.data);
    });
</script>
<% end %>
